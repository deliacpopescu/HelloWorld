@model TeamInfo
@{
    ViewData["Title"] = "Home Page";
}
@section scripts {
    <script type="text/javascript" src="~/js/Index.js"></script>
}
@section AdditionalStyles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
}

<div class="text-center">
    <h1 class="display-4">Our team -Team 2</h1>
    <ul id="list">
        @for (var i = 0; i < Model.TeamMembers.Count; i++)
        {
            var member = Model.TeamMembers[i].Name;

        <li class="member">
            <span class="name">@member</span>
            <button id="deleteField">
                <span  class="delete fa fa-remove"></span>
            </button>
            
            <span id="editField" class="pencil fa fa-pencil"></span>
        </li>

        }
    </ul>
    <input id="nameField" type="text" title="Name" />
    <button type="submit" class="btn-danger" id="createButton">Add</button>

</div>
