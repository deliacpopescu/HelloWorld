@model TeamInfo
@{
    ViewData["Title"] = "Home Page";
}
@section scripts {
    <script type="text/javascript" src="~/js/Index.js"></script>
}
@section AdditionalStyles {
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css" />
}
@section styles{
    <link rel="stylesheet" href="~/css/Styles/StyleSheet.css" />
}

@section ModalWindow {

        <!-- Modal -->

        <div class="modal fade" id="editClassmate" role="dialog">

            <div class="modal-dialog">
                <!-- Modal content-->

                <div class="modal-content">
                    <div class="modal-header">
                        <button type="button" class="close" data-dismiss="modal">&times;</button>
                        <h4 class="modal-title">Edit Classmate</h4>
                    </div>
                    <div class="modal-body">
                        <p>
                            Name
                            <input id="classmateName" title="Name" type="text">
                        </p>
                    </div>
                    <div class="modal-footer">
                        <button id="submit" type="button" class="btn" data-dismiss="modal">Submit</button>
                        <button id="cancel" type="button" class="btn" data-dismiss="modal">Close</button>
                    </div>
                </div>
            </div>
        </div>

    
}

<div class="text-center">
    <h1 class="display-4">Our team -Team 2</h1>
    <ul id="list" class="p-0 col-10">
        @for (var i = 0; i < Model.TeamMembers.Count; i++)
        {
            var member = Model.TeamMembers[i];

            <li id="@member.Id" class="member" data-member-id="@member.Id">
                <span class="name">@member.Name</span>
                <span id="deleteMember" class="delete fa fa-remove" onclick="deleteMember();"></span>
                <span class="pencil fa fa-pencil"></span>
            </li>

        }
    </ul>
    <input id="nameField" type="text" title="Name" />
    <button id="createMember" disabled="disabled" type="submit" class="btn btn-primary">Add</button>
    <button id="clearNameField" class="btn btn-danger" onclick="clearNameField();">Clear</button>
</div>
